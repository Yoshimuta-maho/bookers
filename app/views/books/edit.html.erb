<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id),method: :patch do |f| %>
  
  <p>title</p>
  <%= f.text_field :title %>

  <p>body</p>
  <%= f.text_area :body %>

  <p class="input"><%= f.submit 'Update Book' %></p>



<% end %>

<span class="show">
<%= link_to "show", book_path(@book) %>
</span>

<span class="back">
<%= link_to "back", "/books" %>
</span>

